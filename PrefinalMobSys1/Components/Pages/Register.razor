@page "/register"

@inject NavigationManager Navigation
<h3 class="text-center">Create an Account</h3>

<style>
    .btnRegister{
        background-color: #ff6b01;
        border: none;
        color: white;
        padding: 12px 20px;
        cursor: pointer;
        border-radius: 30px;
        font-size: 18px;
        width: 100%;
        margin-top: 20px;
        box-shadow: 0 5px 15px rgba(255, 107, 1, 0.3);
        transition: 0.3s;
    }

</style>

@if (!string.IsNullOrWhiteSpace(StatusMessage))

{
    <div class="alert alert-@Status text-center">
        <i class="fa fa-info-circle"></i>&nbsp; @StatusMessage
    </div>

}
<div class="container">
    <div class="card shadow-lg p-4 rounded">
        <div class="form-group mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" class="form-control" placeholder="Enter username" @bind="Model.Username" />
        </div>
        <div class="form-group mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" class="form-control" placeholder="Enter password" @bind="Model.Password" />
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <input type="text" id="firstName" class="form-control" placeholder="Enter first name" @bind="Model.FirstName" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input type="text" id="lastName" class="form-control" placeholder="Enter last name" @bind="Model.LastName" />
                </div>
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="mobile" class="form-label">Mobile</label>
            <input type="text" id="mobile" class="form-control" placeholder="Enter mobile number" @bind="Model.MobileNumber" />
        </div>
        <div class="form-group mb-3">
            <label for="address" class="form-label">Address</label>
<textarea id="address" class="form-control" placeholder="Enter your address" @bind="Model.Address"></textarea>
        </div>
        <button class="btnRegister" @onclick="RegisterUser">
            Register
        </button>
    </div>
</div> 